{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "preserve",
    "experimentalDecorators": true
  },
  "filesGlob": [
    "./**/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "files": [
    "./typings/react-redux/react-redux.d.ts",
    "./typings/react/react-dom.d.ts",
    "./typings/react/react.d.ts",
    "./typings/redux/redux.d.ts",
    "./typings/tsd.d.ts",
    "./frontend/components/app.tsx",
    "./frontend/components/counter_list.tsx",
    "./frontend/components/counter.tsx",
    "./frontend/index.tsx",
    "./frontend/actions.ts",
    "./frontend/reducers.ts"
  ],
  "exclude": [
    "node_modules",
    "backend",
    "config",
    "dev_server.js"
  ],
  "atom": {
    "rewriteTsconfig": true,
    "formatOnSave": true
  }
}
