{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "preserve",
    "noEmit": false,
    "experimentalDecorators": true
  },
  "filesGlob": [
    "./**/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "files": [
    "./typings/history/history.d.ts",
    "./typings/index.d.ts",
    "./typings/react-redux/react-redux.d.ts",
    "./typings/react-router/history.d.ts",
    "./typings/react-router/react-router.d.ts",
    "./typings/react/react-dom.d.ts",
    "./typings/react/react.d.ts",
    "./typings/redux/redux.d.ts",
    "./typings/tsd.d.ts",
    "./frontend/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "backend",
    "config",
    "dev_server.js"
  ],
  "atom": {
    "rewriteTsconfig": true,
    "formatOnSave": true
  }
}
