{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "preserve",
    "noEmit": true,
    "experimentalDecorators": true
  },
  "filesGlob": [
    "./**/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "files": [
    "./frontend/ui/button/button.d.ts",
    "./frontend/ui/form/form.d.ts",
    "./frontend/ui/input/input.d.ts",
    "./frontend/ui/layout/layout.d.ts",
    "./frontend/ui/panel/panel.d.ts",
    "./frontend/ui/ui.d.ts",
    "./typings/history/history.d.ts",
    "./typings/react-redux/react-redux.d.ts",
    "./typings/react-router/history.d.ts",
    "./typings/react-router/react-router.d.ts",
    "./typings/react/react-dom.d.ts",
    "./typings/react/react.d.ts",
    "./typings/redux/redux.d.ts",
    "./typings/tsd.d.ts",
    "./frontend/components/authorize/login/index.tsx",
    "./frontend/components/master/index.tsx",
    "./frontend/components/noMatch/index.tsx",
    "./frontend/index.tsx",
    "./frontend/ui/button/index.tsx",
    "./frontend/ui/form/index.tsx",
    "./frontend/ui/input/index.tsx",
    "./frontend/ui/layout/index.tsx",
    "./frontend/ui/panel/index.tsx",
    "./frontend/components/authorize/index.ts",
    "./frontend/ui/index.ts"
  ],
  "exclude": [
    "node_modules",
    "backend",
    "config",
    "dev_server.js"
  ],
  "atom": {
    "rewriteTsconfig": true,
    "formatOnSave": true
  }
}
